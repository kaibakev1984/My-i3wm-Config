set window-title-basename "true"
set selection-clipboard "clipboard"

#
# Color theme
#

set notification-error-bg       "#f05a6c" # Red
set notification-error-fg       "#cb935c" # Foreground
set notification-warning-bg     "#714a65" # Orange
set notification-warning-fg     "#4c566a" # Selection
set notification-bg             "#0a1814" # Background
set notification-fg             "#cb935c" # Foreground

set completion-bg               "#0a1814" # Background
set completion-fg               "#5e81ac" # Comment
set completion-group-bg         "#0a1814" # Background
set completion-group-fg         "#5e81ac" # Comment
set completion-highlight-bg     "#4c566a" # Selection
set completion-highlight-fg     "#cb935c" # Foreground

set index-bg                    "#0a1814" # Background
set index-fg                    "#cb935c" # Foreground
set index-active-bg             "#4c566a" # Current Line
set index-active-fg             "#cb935c" # Foreground

set inputbar-bg                 "#0a1814" # Background
set inputbar-fg                 "#cb935c" # Foreground
set statusbar-bg                "#0a1814" # Background
set statusbar-fg                "#cb935c" # Foreground

set highlight-color             "#714a65" # Orange
set highlight-active-color      "#EA55CF" # Pink

set default-bg                  "#0a1814" # Background
set default-fg                  "#cb935c" # Foreground

set render-loading              true
set render-loading-fg           "#0a1814" # Background
set render-loading-bg           "#cb935c" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#0a1814" # Background
set recolor-darkcolor           "#cb935c" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true
